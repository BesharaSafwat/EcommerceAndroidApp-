<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_margin="32dp"
        android:layout_alignParentStart="true"
        android:src="@drawable/image_model"
        android:scaleType="centerCrop"
        android:id="@+id/user_img"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="16dp"
        android:layout_toEndOf="@+id/user_img"
        android:id="@+id/user_name"
        android:fontFamily="@font/poppinsmed"
        android:text="trash"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="16dp"
        android:layout_toEndOf="@+id/user_img"
        android:layout_below="@+id/user_name"
        android:id="@+id/user_email"
        android:fontFamily="@font/poppinsmed"
        android:text="trash2"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="16dp"
        android:layout_toEndOf="@+id/user_img"
        android:id="@+id/user_role"
        android:layout_below="@+id/user_email"
        android:fontFamily="@font/poppinsmed"
        android:text="trash"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:padding="16dp"
        android:id="@+id/gotoprod"
        android:text="Go to Products"
        android:textAllCaps="false"
        android:fontFamily="@font/popins_bold"
        android:background="@drawable/grey_backgnd"
        />

</RelativeLayout>